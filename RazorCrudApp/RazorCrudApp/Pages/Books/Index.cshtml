@page
@model RazorCrudApp.Pages.Books.IndexModel
@{
    ViewData["Title"] = "Book List";
}

<div class="mt-lg-5">
    
    <h2>Book List</h2>
    @if (Model.Books.Count() == 0)
    {
        <p>There is no books yet.</p>
        <a asp-page="Create">Create book</a>
    }
    else
    {
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">@Html.DisplayNameFor(m => m.Book.Name)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.Book.ISBN)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.Book.PublishedDate)</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Books)
            {
                <tr>
                    <th scope="row">@Html.DisplayFor(m => item.Name)</th>
                    <td>@Html.DisplayFor(m => item.ISBN)</td>
                    <td>@Html.DisplayFor(m => item.PublishedDate)</td>
                    <td><a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a></td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>
